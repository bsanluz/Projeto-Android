<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="@drawable/backgradiente"
        tools:context="com.example.brunoluz.sty.Cadastro">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:layout_marginTop="10dp"
            android:hint="Informe seu Nome"
            android:ems="10"
            android:id="@+id/editText_NomeCada"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@android:drawable/editbox_background_normal" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Informe sua idade"
            android:id="@+id/editText_Idade"
            android:layout_below="@+id/editText_NomeCada"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@android:drawable/editbox_background_normal" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masculino"
            android:id="@+id/radioButton_Masc"
            android:layout_below="@+id/editText_Idade"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@android:drawable/radiobutton_off_background"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toStartOf="@+id/bttCadastrar"
            android:layout_toLeftOf="@+id/bttCadastrar" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Feminino"
            android:id="@+id/radioButton_Fem"
            android:background="@android:drawable/radiobutton_off_background"
            android:layout_alignTop="@+id/radioButton_Masc"
            android:layout_alignRight="@+id/bttCadastrar"
            android:layout_alignEnd="@+id/bttCadastrar"
            android:layout_alignBottom="@+id/radioButton_Masc"
            android:layout_toRightOf="@+id/radioButton_Masc"
            android:layout_toEndOf="@+id/radioButton_Masc" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:hint="Informe seu email"
            android:id="@+id/editText_EmailCadastro"
            android:layout_below="@+id/radioButton_Masc"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_alignRight="@+id/editText_SenhaCadastro"
            android:layout_alignEnd="@+id/editText_SenhaCadastro"
            android:background="@android:drawable/editbox_background_normal" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:hint="Informe uma senha"
            android:id="@+id/editText_SenhaCadastro"
            android:layout_below="@+id/editText_EmailCadastro"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_alignRight="@+id/editText_Idade"
            android:layout_alignEnd="@+id/editText_Idade"
            android:background="@android:drawable/editbox_background_normal" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Done"
            android:background="@drawable/buttonsh"
            android:id="@+id/bttCadastrar"
            android:layout_margin="10dp"
            android:layout_below="@+id/editText_SenhaCadastro" />

    </RelativeLayout>
</ScrollView>
